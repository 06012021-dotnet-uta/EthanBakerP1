@model IEnumerable<ModelsLibrary.Locations>

@{
    ViewData["Title"] = "Store History";
}



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocationID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LocationID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LocationName)
                </td>
                <td>
                    <a asp-action="StoreHistory" asp-route-id="@item.LocationID">Order History</a> @*change to display location order history*@
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-controller="App" asp-action="MainMenu">Back Main Menu</a>
</div>